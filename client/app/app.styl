.splash
  background-image: url('yunityorg.jpg')
  background-size: cover
  h1
    font-family: 'Cabin Sketch', sans-serif
    color: #795548
    font-size: 50px
    
  min-height 100%
  > md-toolbar
    height 42px
    max-height 42px
    min-height 42px
  logo
    padding-right 10px
    > img
      height 200px
      opacity 0.8
  @media screen and (max-width: 450px)
    h1.title
      font-size 7vw
  ui-view
    width 40em

body > md-content
  height 100%

// the main layout panel
.md-whiteframe-2dp
  padding: 20px
  margin-top: .8em

.md-dialog-container > md-dialog
  width: 95%
  max-width: 40em

.multiline
  white-space: pre;

.footer
  opacity 0.6
  text-align center
  margin: 0.5em;
  font-size: 0.8em;

.footer a
  opacity 0.8
  text-decoration: none;
  font-weight: 500;

.footer a:hover
  opacity 1.0

// Fix: leaflet controls should be below md-dialog
.leaflet-control-container
  .leaflet-top
  .leaflet-bottom
    z-index 75 !important
